generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id        Int   @id @default(autoincrement())
  items     OrderItem[]
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id])
  itemId    Int
  item      Item    @relation(fields: [itemId], references: [id])
  quantity  Int
}

model Item {
  id        Int    @id @default(autoincrement())
  name      String
  price     Int
  orderItem OrderItem[]
}